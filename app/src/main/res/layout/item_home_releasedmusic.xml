<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_releasedMusic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/img_album_exp"
        android:clipToOutline="true"
        android:background="@drawable/bg_releasedmusic_img"/>

    <TextView
        android:id="@+id/tv_releasedMusic_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/iv_releasedMusic"
        app:layout_constraintStart_toStartOf="@id/iv_releasedMusic"
        app:layout_constraintTop_toBottomOf="@id/iv_releasedMusic"
        android:layout_marginTop="4dp"
        tools:text="example title" />

    <TextView
        android:id="@+id/tv_releasedMusic_singer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_color"
        app:layout_constraintEnd_toEndOf="@id/iv_releasedMusic"
        app:layout_constraintStart_toStartOf="@id/iv_releasedMusic"
        app:layout_constraintTop_toBottomOf="@id/tv_releasedMusic_title"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:textSize="12sp"
        tools:text="example singer" />
</androidx.constraintlayout.widget.ConstraintLayout>