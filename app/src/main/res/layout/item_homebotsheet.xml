<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_item_botSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/paddingTopCommon"
    app:behavior_hideable="false"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/tv_home_itemBotSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gangwon_edu_hyeonok_t"
        android:text="따끈따근한 친구들의 일기카드를 확인해보세요!"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-16dp"
        android:elevation="-1dp"
        android:src="@drawable/ic_letter"
        app:layout_constraintBottom_toBottomOf="@id/tv_home_itemBotSheet"
        app:layout_constraintEnd_toStartOf="@id/tv_home_itemBotSheet"
        app:layout_constraintTop_toTopOf="@id/tv_home_itemBotSheet" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_itemBotSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tv_home_itemBotSheet"
        tools:listitem="@layout/rv_home_bottomsheet" />
</androidx.constraintlayout.widget.ConstraintLayout>